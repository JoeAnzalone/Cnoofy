<%= form_for [@blog, @post], :html => {:multipart => true} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :type, :value => @post.type %>

  <div class="field">
    <%= f.label :attachment, 'Choose audio file' %>
    <%= f.file_field :attachment %>
  </div>
  <div class="field">
    <%= f.label :remote_attachment_url, "or fetch via URL" %>
    <%= f.text_field :remote_attachment_url %>
  </div>
  <div class="field">
    <%= f.label :body, "Description" %>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags" %>
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
