<%= form_for([@blog, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :type, :value => @post.type %>

  <div class="field">
    <%= f.label :url, 'YouTube or Vimeo URL' %>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :body, "Caption" %>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags" %>
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>