<h1><%= @title %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.tags %></td>
    <td><%= link_to 'Show', [post.blog, post] %></td>
    <td><%= link_to 'Edit', edit_blog_post_path(post.blog, post) %></td>
    <td><%= link_to 'Destroy', [post.blog, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

