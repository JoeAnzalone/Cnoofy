<% if user_signed_in? %>
  <li><%= link_to("#{current_user.blogs.first.subdomain}'s Blog", blog_url(current_user.blogs.first)) %></li>
  <li><%= link_to('Following ' + pluralize(current_user.subscriptions.count, 'blog'), subscriptions_path) %></li>
  <li><%= link_to('Liked ' + pluralize(current_user.likes.count, 'post'), likes_url) %></li>
  <li><%= link_to('Settings', edit_user_registration_path) %></li>
  <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
<% else %>
  <li><%= link_to('Login', new_user_session_path) %></li>
  <li><%= link_to('Register', new_user_registration_path) %></li>
<% end %>